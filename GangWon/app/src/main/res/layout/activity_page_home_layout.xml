<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteFA"
    tools:context="com.commin.pro.gangwon.page.home.Page2Home">
    <!-- main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TOP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteBlue"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_name"
                android:textColor="@color/colorWhiteFA"
                android:textSize="23sp" />

        </LinearLayout>

        <!-- BODY -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/home_selective_margin"
            android:layout_marginLeft="@dimen/home_common_margin"
            android:layout_marginRight="@dimen/home_common_margin"
            android:layout_marginTop="@dimen/home_common_margin"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/home_selective_margin"
                android:layout_weight="1"
                android:background="@color/backBack34"
                android:clickable="true"
                android:onClick="startEnergyHistory"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="에너지 역사"
                    android:textColor="@color/colorWhiteFA"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:text="에너지의 역사에대해 자세히 알아보는 페이지"
                    android:textColor="@color/colorWhiteFA"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/url" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/home_selective_margin"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/backBackA1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="오늘의  SMP"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="거래일"
                            android:textColor="@color/colorWhiteFA"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/tv_home_smp_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/background_light"
                                android:gravity="center"
                                android:text="불러오는중.."
                                android:textColor="@color/colorGray45"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="최대"
                            android:textColor="@color/colorWhiteFA"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/tv_home_smp_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/background_light"
                                android:gravity="center"
                                android:text="불러오는중.."
                                android:textColor="@color/colorGray45"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="평균"
                            android:textColor="@color/colorWhiteFA"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/tv_home_smp_avg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/background_light"
                                android:gravity="center"
                                android:text="불러오는중.."
                                android:textColor="@color/colorGray45"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/colorGrayCD"
                    android:clickable="true"
                    android:onClick="startMap"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강원지도"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:text="API"
                            android:textColor="@color/colorWhiteFA"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/home_selective_margin"
            android:layout_marginLeft="@dimen/home_common_margin"
            android:layout_marginRight="@dimen/home_common_margin"
            android:layout_marginTop="@dimen/home_selective_margin"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/home_selective_margin"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_sun_light"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/colorGrayCD"
                    android:clickable="true"
                    android:onClick="startDevelopment"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_sun_light" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="태양광"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sun_fire"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/colorGrayCD"
                    android:clickable="true"
                    android:onClick="startDevelopment"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_sun_fire" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="태양열"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/home_selective_margin"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_wind_force"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/colorGrayCD"
                    android:clickable="true"
                    android:onClick="startDevelopment"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_wind_force" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="풍 력"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_water_fire"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/home_selective_margin"
                    android:layout_weight="1"
                    android:background="@color/colorGrayCD"
                    android:clickable="true"
                    android:onClick="startDevelopment"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_water_fire" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="지열 / 수열"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/home_selective_margin"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/backBackA1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="신재생"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="News"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrayEE" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhiteFA"
                    android:padding="5dp">

                    <ListView
                        android:id="@+id/lst_home_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrayEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_py"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorDarkBlue"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="startWebView">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="동계 올림픽 페이지"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrayEE" />

                <LinearLayout
                    android:id="@+id/ll_siber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/backBack83"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="startWebView">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="강원 사이버 관광페이지"
                        android:textColor="@color/colorWhiteFA"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <!-- FOOT -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteBlue"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:onClick="call_menu"
                    android:src="@android:drawable/ic_dialog_dialer" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:onClick="call_home"
                    android:src="@android:drawable/ic_dialog_dialer" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:onClick="startCompany"
                    android:src="@android:drawable/ic_dialog_dialer" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--navi menu -->
    <LinearLayout
        android:id="@+id/ll_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"></LinearLayout>

</FrameLayout>
