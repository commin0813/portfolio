<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_courseID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="STAT2480001"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_courseName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C 프로그래밍및실험"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_courseProfessor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이광수 이정수"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_courseTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="월5A,58d월6A월5A,6B"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_item_save"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/login_button_confirm"
                android:text="등록"
                android:textColor="@color/colorWhiteFA"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorGrayCD" />


</LinearLayout>