<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayD3"
    android:orientation="vertical">
    <!-- Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGrayD3"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="강의 추가"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_complete_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorGrayD3"
                android:text="완료"
                android:padding="20px"
                android:layout_gravity="center"
                android:clickable="true"
                android:textColor="@color/colorOrange"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayCD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_class_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteFA"
            android:hint="수업명을 입력하세요."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorGrayCD"
            android:textSize="17sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayCD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_professor_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteFA"
            android:hint="교수님 성함을 입력하세요."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorGrayCD"
            android:textSize="17sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayCD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorGrayD3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_btn_mon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="월" />

            <RadioButton
                android:id="@+id/radio_btn_the"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="화" />


            <RadioButton
                android:id="@+id/radio_btn_wed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="수" />

            <RadioButton
                android:id="@+id/radio_btn_thu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="목" />

            <RadioButton
                android:id="@+id/radio_btn_frd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="금" />

            <RadioButton
                android:id="@+id/radio_btn_sat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorWhiteFA"
                android:text="토" />

            <RadioButton
                android:id="@+id/radio_btn_sun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhiteFA"
                android:layout_weight="1"
                android:text="일" />

        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayCD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_layer_box"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteFA"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorOrange"
                android:layout_weight="0.5" />

            <Spinner
                android:id="@+id/sp_start_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Spinner>

            <Spinner
                android:id="@+id/sp_end_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

            </Spinner>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayCD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhiteFA"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_classroom_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhiteFA"
                android:hint="강의실을 입력하세요."
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorGrayCD"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayCD" />

</LinearLayout>
